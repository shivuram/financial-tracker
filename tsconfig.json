{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true, // allows importing .js/.jsx
    "checkJs": false, // avoids type checking JS files
    "module": "ESNext",
    "jsx": "react-jsx", // âœ… This is required for JSX in TSX
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
